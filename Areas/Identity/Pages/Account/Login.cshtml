@page
@model LoginModel

@{
    
    Layout = "";
}
<!DOCTYPE html>
<html lang="en"><head>
<meta http-equiv="content-type" content="text/html; charset=UTF-8">
<meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
<title>Kirjaudu sisään - Kisa-Kuikka</title>
    <link rel="stylesheet" href="/css/Login.css">
</head>
<body class="align" style="background-color:black">



    <div class="grid" style="background-color: #606468;/*! size: 200px; */border-radius: 10px;">
       <div class="content">
            <h2>Kirjaudu sisään</h2>
    <form id="account" method="post" class="form login">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form__field">
            <label for="login__username"><svg class="icon"><use xlink="http://www.w3.org/1999/xlink" xlink:href="#user"></use></svg><span class="hidden">Username</span></label>
            <input asp-for="Input.Email"  autocomplete="username" type="text" class="form__input form-control" placeholder="Käyttäjätunnus" aria-required="true" />
            
        </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
        <div class="form__field">
           <label for="login__password"><svg class="icon"><use xlink="http://www.w3.org/1999/xlink" xlink:href="#lock"></use></svg><span class="hidden">Password</span></label>
           <input asp-for="Input.Password" type="password" autocomplete="current-password" class="form__input form-control" placeholder="Salasana" aria-required="true">
           
        </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div class="form__field">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        Muista kirjautuminen?
                    </label>
                </div>
        <div class="form__field">
            <input type="submit" value="Kirjaudu sisään">
        </div>
    </form>
    <h2 class="text--center"><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="text-decoration: underline;">Rekisteröi uusi käyttäjä</a></h2>
            <h4 class="text--center">2023 - Arttu Kuikka - <a href="https://github.com/ArttuKuikka/Kisa-Kuikka" style="text-decoration: underline;">Kisa-Kuikka</a></h4>
    
